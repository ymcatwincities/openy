{#
/**
 * @file
 * Expander block template.
 *
 * Available variables:
 * - header: Block header.
 * - content: Block content.
 *
 * @ingroup themeable
 */
#}
{{ attach_library('openy_block_expander/expander-block') }}
<div class="expander-block">
  <h4>
    <a data-toggle="collapse" class="collapsed" href=".expander-content">
    <i class="fa fa-plus-circle" aria-hidden="true"></i>
    <i class="fa fa-minus-circle" aria-hidden="true"></i>
    {{ header }}</a>
  </h4>
  <div class="expander-content collapse">{{ content }}</div>
</div>
