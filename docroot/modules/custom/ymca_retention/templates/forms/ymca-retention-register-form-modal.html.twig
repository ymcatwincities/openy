{#
/**
 * @file
 * Default theme implementation for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 *
 * @ingroup themeable
 */
#}
{% if form.confirmation is not defined %}
  <div class="yfr-register-form">
    {% if form.messages is defined %}
      <div class="row">
        {{ form.messages }}
      </div>
    {% endif %}
    {% if form.membership_id is defined %}
      {{ form.membership_id }}
    {% endif %}
    {% if form.email is defined %}
      {{ form.email }}
    {% endif %}
    <div class="row">
      <div class="col-sm-6">
        {{ form.submit }}
      </div>
      {% if form.membership_id is defined %}
        <div class="col-sm-6 hidden-xs">
          <a href="#" class="yfr-facility-access-hint-link" data-toggle="collapse" data-target=".yfr-facility-access-hint-wrapper">
            {{ 'Where can I find my Facility Access ID?'|t }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
{% else %}
  <div class="yfr-content-info">
    <div class="row">
      <div class="col-sm-12">
        <p><strong> {{ form.confirmation }}</strong></p>
        <p>{{ 'Keep up the good work and share your Y Spirit.'|t }}</p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <input type="submit" value="{{ 'OK'|t }}" class="btn btn-lg btn-primary orange-light-lighter" data-dismiss="modal">
      </div>
    </div>
  </div>
{% endif %}
{{ form|without('email', 'membership_id', 'submit', 'messages', 'confirmation') }}
{% if form.membership_id is defined %}
  <div class="yfr-facility-access-hint-wrapper collapse">
    <div class="yfr-facility-access-hint">
      <p>
        {{ 'Please find your facility access ID below the barcode.'|t }}
      </p>
      <p class="small">
        {{ 'Please note it might be on the front of the card on older membership cards.'|t }}
      </p>
    </div>
  </div>
{% endif %}
