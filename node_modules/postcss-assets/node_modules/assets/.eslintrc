{
  "extends": "eslint:recommended",
  "env": {
    "node": true
  },
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "no-console": [0],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, {
      "anonymous": "always",
      "named": "never"
    }],
    "space-before-keywords": [2, "always"]
  },
  "root": true
}
