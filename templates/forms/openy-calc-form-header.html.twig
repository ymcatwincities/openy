<p class="description">{{ 'Your membership gives you access to all 13 YMCA branch locations!'|t }}</p>
<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav nav-pills">
    {% set active_step = 1 %}
    {% for step in steps %}
      {% if step.active %}
        {% set active_step = step.number %}
      {% endif %}
    {% endfor %}
    {% for step in steps %}
      <li{% if step.number == active_step %} class="active"{% endif %}>
      <a href="#step{{ step.number }}" data-toggle="tab" data-step="{{ step.number }}">
      <span class="nav-pills__text">{{ step.number }}. {{ step.title }}</span></a>
      </li>
    {% endfor %}
    </ul>
  </div>
</div>
