<?php

/**
 * @file
 * Implement install hooks for module.
 */

/**
 * Update paragraph label.
 */
function openy_prgf_video_player_update_8001() {
  $module = 'openy_prgf_video_player';
  $bundle = 'video_player';
  $config = drupal_get_path('module', $module) . '/config/install/paragraph.paragraphs_type.' . $bundle . '.yml';
  $config_importer = \Drupal::service('openy_upgrade_tool.param_updater');
  $config_importer->update($config, 'paragraph.paragraphs_type.' . $bundle, 'label');
}
